/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "paths": {
      "@app/*": ["./src/app/*"],
      "@services/*": ["./src/shared/data/services/*"],
      "@interfaces/*": ["./src/shared/data/interfaces/*"],
      "@models/*": ["./src/shared/data/models/*"],
      "@components/*": ["./src/shared/components/*"]
    }
  },
  "files": ["src/main.ts", "src/main.server.ts", "server.ts"],
  "include": ["src/**/*.d.ts"]
}
